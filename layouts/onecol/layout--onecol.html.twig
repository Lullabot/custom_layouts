{#
/**
 * @file
 * Default theme implementation to display a one column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 * @see https://www.drupal.org/docs/8/api/layout-api/how-to-register-layouts
 * @see https://v4-alpha.getbootstrap.com/layout/grid/
 */
#}
{%
  set classes = [
    'layout',
    'layout--onecol',
    settings.extra_classes,
  ]
%}
{% if content %}
  <section{{ attributes.addClass(classes) }}>
    {% if settings.title %}
      <{{ settings.title_element}} class="{{ settings.title_classes}}">{{ settings.title }}</{{ settings.title_element }}>
    {% endif %}
    <div {{ region_attributes.content.addClass('layout__region', 'layout__region--content', 'layout__region--row-count-1') }}>
      {{ content.content }}
    </div>
  </section>
{% endif %}
